<Page x:Class="TripasDeGatoCliente.Views.GameMatch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TripasDeGatoCliente.Views"
      mc:Ignorable="d" 
      Width="1280" Height="720"
      Background="Black">

    <Grid>
        <!-- Definimos las filas y columnas para distribuir el espacio -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Espacio superior -->
            <RowDefinition Height="5*" />
            <!-- Espacio para el Canvas -->
            <RowDefinition Height="*" />
            <!-- Espacio inferior -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*" />
            <!-- Espacio izquierdo -->
            <ColumnDefinition Width="154*" />
            <!-- Espacio para el Canvas -->
            <ColumnDefinition Width="51*" />
            <!-- Espacio derecho -->
        </Grid.ColumnDefinitions>

        <!-- Canvas para dibujar -->
        <Canvas Grid.Row="1" Grid.Column="1" Name="drawingCanvas" Background="White" />
        <Image Source="/Images/Profiles/ImageProfile1.png" RenderTransformOrigin="0.5,0.5" Margin="32,138,33,166" Grid.Row="1">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.338"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Label x:Name="labelPlayer1" Content="Player 1" Foreground="White" FontSize="16" FontFamily="Rockwell Extra Bold" Margin="84,348,83,137" Grid.Row="1" />
        <Image Source="/Images/Profiles/ImageProfile2.png" Margin="33,143,32,161" Grid.Column="2" Grid.Row="1" />
        <TextBlock Text="Jugador 2" Foreground="White" FontSize="16" FontFamily="Rockwell Extra Bold" Margin="81,353,80,142" Grid.Row="1" Grid.Column="2" />

    </Grid>
</Page>
