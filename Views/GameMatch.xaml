<Page x:Class="TripasDeGatoCliente.Views.GameMatch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TripasDeGatoCliente.Views"
      mc:Ignorable="d" 
      Width="1280" Height="720"
      Background="Black">

    <Grid>
        <!-- Definimos las filas y columnas para distribuir el espacio -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Espacio superior -->
            <RowDefinition Height="5*" />
            <!-- Espacio para el Canvas -->
            <RowDefinition Height="*" />
            <!-- Espacio inferior -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*" />
            <!-- Espacio izquierdo -->
            <ColumnDefinition Width="154*" />
            <!-- Espacio para el Canvas -->
            <ColumnDefinition Width="51*" />
            <!-- Espacio derecho -->
        </Grid.ColumnDefinitions>

        <!-- Canvas para dibujar -->
        <Canvas Grid.Row="1" Grid.Column="1" Name="drawingCanvas" Background="White" />

    </Grid>
</Page>
